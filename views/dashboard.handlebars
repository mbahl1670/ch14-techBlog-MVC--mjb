<section class="border">
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title">
        </div>
        <div>
          <label for="post-content">Content</label>
          <input type="text" id="post-content" name="post-content">
        </div>
        <button type="submit" class="btn" id="post-prompt-button">Click to Create a New Post</button>
    </form>
</section>

{{#if posts.length}}
<section class="">
  <h2 class="p-5">Your Posts</h2>
  
  <ol>
    {{#each posts as |post|}}
    <li>
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">
        <article class="card">
            <h2>{{post.title}}</h2>
            <div>
                {{post.content}}
            </div>
            <div>
                Posted by: {{post.user.username}} on {{format_date post.created_at}}
            </div>
            <div>
                {{#each post.comments as |single-comment|}}
            <div>
                {{single-comment.comment_text}}
                :  comment made by: {{single-comment.user.username}} on {{format_date single-comment.created_at}}
            </div>
                {{/each}}
            </div>
        </article>
        </a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
<ol class="d-flex">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}">{{title}}</a>
            </div>
            <div>
                {{created_at}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>
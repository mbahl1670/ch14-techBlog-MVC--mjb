<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}">{{title}}</a>
            </div>
            <div>
                {{content}}
            </div>
            <div>
                Created on {{format_date created_at}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>
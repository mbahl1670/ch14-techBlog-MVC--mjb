<div class="post">
    <article class="card">
        <h2>{{post.title}}</h2>
        <div>
            {{post.content}}
        </div>
        <div>
            Posted by: {{post.user.username}}
        </div>
        <div>
            {{format_date post.created_at}}
        </div>
        <div>
            {{#each post.comments as |single-comment|}}
            <div>
                {{single-comment.comment_text}}
                :  comment made by: {{single-comment.user.username}} @ {{format_date single-comment.created_at}}
            </div>
            {{/each}}
        </div>
    </article>

    <form class="comment-form">
        <div>
            <textarea name="comment-text"></textarea>
            <button type="submit">Add Comment</button>
        </div>
    </form>

</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}
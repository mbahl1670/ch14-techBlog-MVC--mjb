<div>
    <article class="card">
        <div class="post border">
            <h2>{{post.title}}</h2>
            <p>
                {{post.content}}
            </p>
            <div>
                Posted by: {{post.user.username}} on {{format_date post.created_at}}
            </div>
        </div>

        <div class="comments">
            {{#each post.comments as |single-comment|}}
            <div class="comment">
                {{single-comment.comment_text}}
                :  comment made by: {{single-comment.user.username}} @ {{format_date single-comment.created_at}}
            </div>
            {{/each}}
        </div>
    </article>

    <form class="comment-form">
        <div>
            <textarea name="comment-text"></textarea>
            <button type="submit">Add Comment</button>
        </div>
    </form>

</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}